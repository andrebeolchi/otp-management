{
  "name": "otp-management",
  "version": "1.0.0",
  "description": "A clean architecture implementation of an OTP (One-Time Password) management system using Fastify and TypeScript.",
  "main": "src/infra/api-rest/otp-management/server.ts",
  "author": "Andre Beolchi <andregarbini2001@gmail.com>",
  "packageManager": "yarn@1.22.22",
  "scripts": {
    "dev:fastify": "tsup src/adapters/http/fastify/server.ts --watch",
    "build:fastify": "tsup --config tsup.fastify.config.ts",
    "build:lambda": "tsup --config tsup.lambda.config.ts",
    "deploy:lambda": "yarn build:lambda && serverless deploy",
    "prepare": "husky",
    "postinstall": "prisma generate",
    "commitlint:edit": "commitlint --edit",
    "lint": "eslint src/** --no-error-on-unmatched-pattern",
    "lint:fix": "eslint --fix src/** --no-error-on-unmatched-pattern",
    "format": "prettier --write .",
    "test": "jest"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": "eslint --fix"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.879.0",
    "@aws-sdk/lib-dynamodb": "^3.879.0",
    "@fastify/cors": "^11.1.0",
    "@fastify/swagger": "9.4.1",
    "@fastify/swagger-ui": "5.2.1",
    "@prisma/client": "^6.15.0",
    "fastify": "^5.5.0",
    "fastify-plugin": "4.5.1",
    "fastify-type-provider-zod": "4.0.2",
    "nodemailer": "^7.0.6",
    "twilio": "^5.8.2",
    "zod": "3.24.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.34.0",
    "@faker-js/faker": "^9.0.3",
    "@types/aws-lambda": "^8.10.152",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "@types/nodemailer": "^7.0.1",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jest": "^30.1.1",
    "jest-environment-jsdom": "^30.1.1",
    "jest-mock-extended": "^4.0.0",
    "jiti": "^2.5.1",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "prisma": "^6.15.0",
    "serverless-esbuild": "^1.55.1",
    "serverless-offline": "^14.4.0",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.41.0"
  },
  "license": "MIT"
}
